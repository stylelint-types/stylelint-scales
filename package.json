{
  "name": "@stylelint-types/stylelint-scales",
  "type": "module",
  "version": "5.0.0",
  "packageManager": "pnpm@10.28.0",
  "description": "TypeScript definitions for stylelint-define-config",
  "author": "pengzhanbo <volodymyr@foxmail.com> (https://github.com/pengzhanbo)",
  "license": "MIT",
  "homepage": "https://github.com/stylelint-types/stylelint-scales#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/stylelint-types/stylelint-scales.git"
  },
  "bugs": "https://github.com/stylelint-types/stylelint-scales/issues",
  "keywords": [
    "config",
    "scss",
    "configuration",
    "define-config",
    "stylelint-config",
    "stylelint",
    "stylelint-scales",
    "stylelintconfig",
    "typed",
    "typescript"
  ],
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./types": {
      "types": "./lib/types.d.ts"
    }
  },
  "main": "lib/index.js",
  "module": "lib/index.js",
  "files": [
    "lib"
  ],
  "engines": {
    "node": ">=20.19.0",
    "npm": ">=9.0.0",
    "pnpm": ">=9.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "build": "tsup",
    "release:publish": "pnpm publish",
    "release:changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "release": "bumpp package.json --execute=\"pnpm release:changelog\" --commit --all --push --tag"
  },
  "peerDependencies": {
    "stylelint": ">=17",
    "stylelint-define-config": ">=17"
  },
  "peerDependenciesMeta": {
    "stylelint": {
      "optional": true
    }
  },
  "devDependencies": {
    "@pengzhanbo/eslint-config": "^1.46.0",
    "bumpp": "^10.4.0",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.39.2",
    "stylelint": "^17.0.0",
    "stylelint-define-config": "^17.0.0",
    "stylelint-scales": "^5.0.0",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  }
}
